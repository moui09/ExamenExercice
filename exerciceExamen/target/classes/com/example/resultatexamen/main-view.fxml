<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>


<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.resultatexamen.MainController" alignment="CENTER" hgap="20" vgap="20">

    <VBox spacing="10" alignment="CENTER">
        <Label text="RESULTATS EXAMEN" style="-fx-font-size: 35px; -fx-font-weight: bold;" />
        <Label text="Veuillez entrer votre Matricule." wrapText="true" style="-fx-font-size: 14px;" />
        <Label text="Matricule : 001, 002, 003" style="-fx-font-size: 16px;" />
        <TextField fx:id="matriculeField" promptText="ex: 0001" style="-fx-font-size: 20px;" />
        <Button text="SOUMETTRE" fx:id="consulterButton" onAction="#onConsulterButtonClicked" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 30px; -fx-padding: 20px 40px;" />
    </VBox>

</GridPane>
